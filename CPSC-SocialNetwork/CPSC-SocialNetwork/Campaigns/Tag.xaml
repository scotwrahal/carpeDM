<UserControl x:Class="CPSC_SocialNetwork.Campaigns.Tag"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CPSC_SocialNetwork.Campaigns"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="100">
    <Border Background="Transparent" MinWidth="100" MaxWidth="200">
        <Border Background="#F2F2F2" CornerRadius="6" Margin="4">
            <Border.ToolTip>
                <TextBlock x:Name="Tooltip" FontSize="12" FontFamily="Century Gothic" TextTrimming="CharacterEllipsis"/>
            </Border.ToolTip>
            <TextBlock x:Name="Label" Text="Tag" Margin="8,4,8,4" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" FontFamily="Century Gothic" TextTrimming="CharacterEllipsis"/>
        </Border>
    </Border>
</UserControl>
