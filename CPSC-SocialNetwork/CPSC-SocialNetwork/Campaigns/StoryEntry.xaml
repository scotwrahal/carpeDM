<UserControl x:Class="CPSC_SocialNetwork.Campaigns.StoryEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CPSC_SocialNetwork.Campaigns"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="500">
    <Border Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="1" Background="#f2f2f2" CornerRadius="12" Margin="10,0,10,10">
                <TextBlock x:Name="TextBox" Margin="10" TextWrapping="Wrap"/>
            </Border>
            <TextBlock x:Name="TitleBox" TextDecorations="Underline" FontFamily="Century Gothic" FontSize="16" Grid.Row="0" Margin="20,10,0,0" TextTrimming="WordEllipsis"/>
        </Grid>
    </Border>
</UserControl>
