<UserControl x:Class="CPSC_SocialNetwork.Campaigns.PlayerEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CPSC_SocialNetwork.Campaigns"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="500">
    <Border Background="White">
        <Border Background="#F2F2F2" Margin="8,8,8,8" CornerRadius="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="32"/>
                    <ColumnDefinition Width="32"/>
                </Grid.ColumnDefinitions>

                <Image x:Name="Image" Grid.Column="0"/>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock x:Name="Name" FontFamily="Century Gothic" FontSize="16" Grid.Row="0" Margin="4,0,0,0" TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>
                    <TextBlock x:Name="Tag" FontFamily="Century Gothic" FontSize="16" Grid.Row="1" Margin="4,0,0,0" TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>
                </Grid>

                <Image Grid.Column="2" Margin="0,4,0,4" Source="/Images/GM.png"/>
                <Image Grid.Column="3" Margin="0,4,4,4" Source="/Images/DM.png"/>


            </Grid>
        </Border>
    </Border>
</UserControl>